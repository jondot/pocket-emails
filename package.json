{
  "name": "pocket-emails",
  "version": "1.0.0",
  "license": "MIT",
  "bin": {
    "pocket-emails": "dist/bin.js",
    "pocket-emails-auth": "dist/auth.js"
  },
  "scripts": {
    "start": "tsc -w",
    "watch": "jest --watch",
    "test": "jest",
    "test:bin": "node dist/index.js",
    "release": "yarn build && git commit -am 'build'; yarn version && git push --tags && git push origin master",
    "build": "tsc"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "consola": "^1.4.1",
    "ejs": "^2.6.1",
    "email-templates": "^4.0.3",
    "fs-extra": "^5.0.0",
    "inquirer": "^5.1.0",
    "lodash": "^4.17.5",
    "nodemailer-mailgun-transport": "^1.4.0",
    "ora": "^1.4.0",
    "pocket-auth": "^1.2.0",
    "pocket-promise": "^1.1.0",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/fs-extra": "^5.0.0",
    "@types/inquirer": "^0.0.36",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.116",
    "@types/node": "^9.4.4",
    "@types/ora": "^1.3.1",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.7.0",
    "typescript": "^2.8.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}